<%= form.hidden_field :invitation_token %>
<%= form.label :login %><br />
<%= form.text_field :login %><br />
<br />
<%= form.label :email %><br />
<%= form.text_field :email %><br />
<br />
<%= form.label :height %> in millimeters.  (Yes, this is lame.  It's high on the todo list)<br />
<%= form.text_field :height %> <br />
<br />
<%= form.label :birthdate %><br />
<%= form.date_select :birthdate, :start_year => Time.now.year - 100, :end_year => Time.now.year - 12 %><br />
<br />

<%= form.label :time_zone %><br />
<%= form.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones %><br />
<br />

<%= form.label :sex %><br />
<%= form.radio_button :sex, "female" %>Female <%= form.radio_button :sex, "male" %>male<br />
<br />
<%= form.label :password, form.object.new_record? ? nil : "Change password" %><br />
<%= form.password_field :password %><br />
<br />
<%= form.label :password_confirmation %><br />
<%= form.password_field :password_confirmation %><br />

