<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
 
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title>Zed9</title>
  <%= stylesheet_link_tag 'zed9' %>
  <%= javascript_include_tag :defaults %>
</head>
<body>
<div id="loginpane">
	<% if !current_user %>
	  <div id="not_logged_in"> 
		  <div id="login">

		<% form_for @user_session, :url => user_session_path do |f| %>
	  <%= link_to "Register", new_account_path %> or login:
	  	  <%= f.error_messages %>
		  <span class="login_text">Username:</span> <%= f.text_field :login %>
		  <span class="login_text">Password:</span> <%= f.password_field :password %>
		  <%= f.submit "Login" %>

		<% end %>
		</div>
	  </div>
	<% else %>
	  <div id="logged_in">
	  <%= link_to "My Account", account_path %> |
	  <%= link_to "Logout", user_session_path, :method => :delete, :confirm => "Are you sure you want to logout?" %>
	  </div>
	<% end %>
</div>
	
<div id="main" align="center">
	<div id="flash">
		<%= flash[:notice] %>
	</div>
	<%= yield  %>
</div>

<div id="footer" align="center">
	Â© 2009 Zed9. All rights reserved.
</div>

 
 
</body>
</html>
