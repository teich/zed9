<div id="loginpane">

	<% if !current_user %>

	<div id="not_logged_in"> 

		<div id="login">

			<%= link_to "Log in", login_path  %>

		</div>

	</div>

	<% else %>

	<div id="logged_in">
		<ul>
			<li>Welcome, <%= link_to current_user.login, account_path %></li>
			<% if current_user.invitation_limit > 0 %>
			<li><%= link_to "Invite friends", new_invitation_path %> (<%= current_user.invitation_limit %> remaining)</li>
			<% end %>
			<li class="last"><%= link_to "Log out", user_session_path, :method => :delete %></li>
		</ul>
	</div>

	<% end %>

</div>