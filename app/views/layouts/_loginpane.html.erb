<div id="loginpane">
	<% if !current_user %>
	  <div id="not_logged_in"> 
		  <div id="login">

		<%= link_to "Log in", user_session_path, :method => :new  %>

		</div>
	  </div>
	<% else %>
	  <div id="logged_in">
		Welcome, <%= link_to current_user.login, account_path %>   &nbsp;|&nbsp;
		<% if current_user.invitation_limit > 0 %>
			<%= link_to "Invite Friends", new_invitation_path %> (<%= current_user.invitation_limit %> remaining)   &nbsp;|&nbsp;
		<% end %>
		<%= link_to "Log out", user_session_path, :method => :delete, :confirm => "Are you sure you want to logout?" %>
	  </div>
	<% end %>
</div>