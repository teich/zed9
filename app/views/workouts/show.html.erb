<%= javascript_tag "var WORKOUT_ID = #{@workout.id};" -%>
<div id="content_header">
	<div id="workout_header">

		<h1>
			<!-- <img class="activity_icon" src="/images/running.jpg" width="37" height="40"> -->
			<img class="activity_icon" src="/images/activities/running.png"><span class="click"><%=h @workout.name %></span> <% if my_workout? %><span class="action"><%= link_to 'Edit', edit_workout_path(@workout) %></span><% end %></h1>

		<p id="workout_description"><span class="click"><%=h @workout.activity.name %></span> on <span class="click"><%=h activity_timestamp(@workout.start_time) %></span> by <%=h @workout.user.login %></p>

		<!-- <p id="workout_notes">Notes on the workout</p> -->

		<div id="tag_set">
			<span id="tags_header">Tags:<% if my_workout? %><% end %></span>
			<span id="tags_list">
				<% @workout.tags.each do |tag| %>
				<span class="tag">
					<a class="globe" href="#"><span class="displace">Global</span><img src="/images/spacer.png" width="18px" height="18px"></a> 
					<%= link_to tag.name, user_workouts_path(@workout.user, :tag => tag.name) %>
					<% if my_workout? %><% end %>
				</span>
				<% end %>
			</span>
			<% if false %>
			<span class="form">
				<% form_for @tagging, :url => workout_taggings_path(@workout) do |f| %>
					<input type="text" name="name" id="new_tag_name" autocomplete="off"/>
					<%= f.submit "Add", :class => "submit" %>
				<% end %>
			<% end %>
			</span>
		</div>	
	</div>	

	<!-- <div id="view_selection">
		<span class="coming_soon">selector for alternate workout views coming here soon</span>
	</div>	 -->

</div>

<div id="content">

	<div id="workout_left_column">
		
		<table id="workout_comparison">
			<tr class="stat" id="duration">
				<th>Duration</th>
				<td id="spark_bar"><div id="spark_duration" class="visualization"></div></td>
				<td class="number"><span class="value"><%= h number_to_time(@workout.duration) %></span>h</td>
			</tr>
			
			<% if !@workout.distance.nil? %>
			<tr class="stat" id="distance">
				<th>Distance</th>
				<td id="spark_bar"><div id="spark_distance" class="visualization"></div></td>
				<td class="number"><span class="value"><%= h @workout.distance_in_miles %></span>miles</td>
			</tr>
			<% end -%>
			
			<% if false %>
			<tr class="stat" id="calorie">
				<th>Calories</th>
				<td id="spark_bar"><div id="spark_calorie" class="visualization"></div></td>
				<td class="number"><span class="value">N/A</span></td>
			</tr>
			<% end -%>
			
			<% if !@workout.speed.nil? %>
			<tr class="stat" id="speed">
				<th>Speed</th>
				<td id="spark_line"><div id="spark_speed" class="visualization"></div></td>
				<td class="number"><span class="value"> <%= h @workout.avg_speed_in_mph %> </span>mph</td>
			</tr>
			<% end -%>
			
			<% if !@workout.elevation.nil? %>
			<tr class="stat" id="elevation">
				<th>Elevation</th>
				<td id="spark_line"><div id="spark_elevation" class="visualization"></div></td>
				<td class="number"><span class="value"><%=h @workout.elevation_in_feet %></span>ft</td>
			</tr>
			<% end -%>
			
			<tr class="stat" id="hr">
				<th>Heart Rate</th>
				<td id="spark_line"><div id="spark_heartrate" class="visualization"></div></td>
				<td class="number"><span class="value"><%=h @workout.hr %></span>bpm</td>
			</tr>
		</table>

	</div>

	<% if @workout.gps_data? %>
		
	<div id="right_column">
		<div id="map">
	        <%= @map.div(:width => 536, :height => 280 ) %>
		</div>

	</div>
	<% end %>

	<div id="spark_fullsize_chart" class="big_visualization">
	</div>	
	<p id="hoverdata">Mouse hovers at
	    (<span id="x">0</span>, <span id="y">0</span>). <span id="clickdata"></span></p>

</div>

