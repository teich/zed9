<% title "ZED9: " + @workout.name + " by " + @workout.user.display_name %>

<%= javascript_tag "var WORKOUT_ID = #{@workout.id};" -%>


<div class="content_header">


	<div id="workout_header">
		
		<% if !current_user %>
			<div id="join_prompt">
				<a href="../">Join ZED9 to track your workouts and see how you measure up</a>
			</div>
		<% end %>
		
		<% if my_page? && @workout.overlaps? %>
		<div id="overlaps">
			This overlaps with another workout.<br>
			<%= link_to 'Check out your merging options.', workout_overlaps_path(@workout) %>
		</div>
		<% end %>

		<h1><!-- <img class="activity_icon" src="/images/running.jpg" width="37" height="40"> -->
			<%= link_to image_tag(@workout.activity.root.icon_path, :class => "activity_icon"), activity_path(@workout.activity) %><%=h @workout.name %>  
			<% if my_page? %>
				<span class="action"><%= link_to 'edit', edit_workout_path(@workout) %></span>
			<% else %>
				<span class="by">by</span> <%= link_to @workout.user.display_name, user_path(@workout.user) %> <span class="points">(<%=h @workout.user.points %> points)</span> 
			<% end %></h1>
			
			<p id="workout_description"><%= link_to @workout.activity.name, activity_path(@workout.activity) %> on <%=h activity_timestamp(@workout.start_time) %>. <img class="comment_count_point" src="/images/speech_left.png"><span class="comment_count"><a href="#disqus_thread">comment</a></span></p>

			<p id="workout_notes"><%= h @workout.notes %></p>

			<!-- Condition to only display Tags field when there are tags, or prompt owner to tag -->
			<% if @workout.tags.size > 0 %>
			<div id="tag_set">
				<span id="tags_header">Tags:<% if my_page? %><% end %></span>
				<span id="tags_list">
					<% @workout.tags.each do |tag| %>
					<span class="tag">
						<a class="globe" href="#"><span class="displace">Global</span><img src="/images/spacer.png" width="18px" height="18px"></a> 
						<%= link_to tag.name, user_workouts_path(@workout.user, :tag => tag.name) %>
					</span>
					<% end %>
				</span>
				<% if false %>
				<span class="form">
					<% form_for @tagging, :url => workout_taggings_path(@workout) do |f| %>
						<input type="text" name="name" id="new_tag_name" autocomplete="off"/>
						<%= f.submit "add", :class => "submit_no_button" %>
					<% end %>
				<% end %>
				</span>
			</div>	
			<% elsif my_page? && @workout.tags.size == 0 %>
			<span class="action"><%= link_to 'Tag this workout', edit_workout_path(@workout) %></span>
			<% end %>
			
	</div>	
	
</div>

<div class="content">

	<div id="workout_left_column" class="left_column">
		
		<table id="workout_stats">
			<tr class="stat" unit="h" id="duration">
				<th class="spark_bar_title">Duration</th>
				<td id="spark_bar"><div id="duration" class="sparkbar"></div></td>
				<td class="number"><span class="value"><%= h number_to_time(@workout.duration) %></span>h</td>
			</tr>
			
			<% if !@workout.distance.nil? %>
			<tr class="stat" unit="miles" id="distance">
				<th class="spark_bar_title">Distance</th>
				<td id="spark_bar" id="distance"><div id="distance" class="sparkbar"></div></td>
				<td class="number"><span class="value"><%= h @workout.distance_in_miles %></span>miles</td>
			</tr>
			<% end -%>
			
			<% if false %>
			<tr class="stat" unit="kCal" id="calorie">
				<th class="spark_bar_title">Calories</th>
				<td id="spark_bar"><div id="calorie" class="sparkbar"></div></td>
				<td class="number"><span class="value">N/A</span></td>
			</tr>
			<% end -%>
			
			<% if !@workout.speed.nil? %>
			<tr class="stat" unit="mph" id="speed">
				<th class="spark_line_title">Speed</th>
				<td id="spark_line"><div id="speed" class="sparkline"></div></td>
				<td class="number spark_line_title"><span class="value"><%= h speed_to_pace(@workout) %></span><%=h units(@workout,:speed) %></td>
			</tr>
			<% end -%>
			
			<% if !@workout.elevation.nil? %>
			<tr class="stat" unit="ft" id="elevation">
				<th class="spark_line_title">Elevation</th>
				<td id="spark_line"><div id="elevation" class="sparkline"></div></td>
				<td class="number spark_line_title"><span class="value"><%=h @workout.elevation_in_feet %></span>ft</td>
			</tr>
			<% end -%>
			
			<% if !@workout.hr.nil? %>
			<tr class="stat" unit="bpm" id="hr">
				<th class="spark_line_title">Heart rate</th>
				<td id="spark_line"><div id="hr" class="sparkline"></div></td>
				<td class="number spark_line_title"><span class="value"><%=h @workout.hr %></span>bpm</td>
			</tr>
			<% end %>
		</table>

	</div>

	<% if @workout.gps_data? %>
		
	<div id="workout_right_column" class="right_column">
		<div id="map">
			<div id="map_div" style="width:524px;height:296px" ></div>
	        
	        <% if false %> <%= @z9map.div(:width => 524, :height => 296 ) %> <% end %>
		</div>

	</div>
	<% end %>
	
	<div id="fullsize_chart_area">

		<div id="axis_labels">
			<% if @workout.hr %>
				<h2 id="y1_axis_label">Heart rate</h2>
				<h2 id="y2_axis_label"></h2>
			<% else %>
				<h2 id="y1_axis_label">Speed</h2>
				<h2 id="y2_axis_label"></h2>
			<% end %>
		</div>
		<div id="graph_options_wrapper">
			<div id="options_link">graph options</div>
			<div id="select_axes">
				<div id="y1_axis_options">
					<ul>
						<li class="column_label">y1</li>
						<% @workout.graph_fields.each_with_index do |value, i| %>
						<li><input type="radio" display_y1="<%= value[1] %>" name="y1_options" <% if i==0 %>checked="checked" <% end %>value="json_<%=h value[0] %>_big"/><!-- <%= value[1] %> --></li>
						<% end %>
						<li>&nbsp;</li>
					</ul>
				</div>
	
				<div id="y2_axis_options">
					<ul>
						<li class="column_label">y2</li>
						<% for field in @workout.graph_fields do %>
						<li class="label"><input type="radio" display_y2="<%= field[1] %>" name="y2_options" value="json_<%=h field[0] %>_big"/><%=h field[1] %></li>
						<% end %>
						<li class="none"><input type="radio" display_y2="&nbsp;" name="y2_options" value="" checked="checked">None</li>
					</ul>
				</div>
				<div class="close">x</div>
			</div>
		</div>

		<% if @workout.hr %>
			<div id="json_heartrate_big" class="big_visualization"></div>
		<% else %>
			<div id="json_speed_big" class="big_visualization"></div>
		<% end %>

	</div>
	
	<div id="comments">
	<%= disqus_thread  %>
	<%= disqus_comment_counts %>
	</div>

</div>

