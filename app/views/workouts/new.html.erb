<% if params[:device] %>
<% form_for [current_user, @workout], :url => user_workouts_path, :action => 'upload', :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
	<%= f.label :tag_list %><br />
	<%= f.text_field :tag_list %>
  <p> 
    <%= f.label "Upload your device file:" %>
    <%= file_field_tag "device_file" %> 
  </p> 
  <p>
	<%= hidden_field_tag 'device', params[:device] %>
    <%= f.submit "Save" %>
  </p>
<% end %>
<% else %>
<ul>
  <li>Nike +</li>
  <li><%= link_to 'Garmin', url_for(:action => 'new', :device => 'garmin') %></li>
  <li><%= link_to 'Polar', url_for(:action => 'new', :device => 'polar') %></li>
  <li>Generic GPS</li>
</ul>
<% end -%>
 
<%= link_to 'Back', user_workouts_path %>