<div id="login_content" class="main">

<% form_for @user_session, :url => user_session_path do |f| %>

  <%= f.error_messages %>

  <table id="login_form" class="form">
    <tr>
      <td class="label"><%= f.label :login %></td>      
      <td class="field"><%= f.text_field :login %></td>
    </tr>
    <tr>
      <td class="label"><%= f.label :Password %></td>
      <td class="field"><%= f.password_field :password %></td>
    </tr>
    <tr>
      <td>&nbsp;</td>
      <td class="field"><%= f.check_box :remember_me %><%= f.label :remember_me %></td>
    </tr>
    <tr>
      <td>&nbsp;</td>
      <td class="field"><%= f.submit "Login" %></td>
    </tr>
  </table>

<% end %>

</div>