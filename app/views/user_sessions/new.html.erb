<div class="content_header">
		<h1>Log in</h1><br>
</div>

<div class="content">

	<div id="login_form">
		<% form_for @user_session, :url => user_session_path do |f| %>

	  <%= f.error_messages %>

	  <table id="login_box" class="form">
	    <tr>
	      <th><%= f.label :login, "User name" %></th>      
	      <td><%= f.text_field :login %></td>
	    </tr>
	    <tr>
	      <th><%= f.label :password %></th>
	      <td><%= f.password_field :password %></td>
	    </tr>
	    <tr>
	      <th>&nbsp;</th>
	      <td><%= f.check_box :remember_me %> <%= f.label :remember_me %></td>
	    </tr>
	    <tr>
	      <th>&nbsp;</th>
		    <td><%= f.submit "Log in", :class => "submit" %></td> 
	    </tr>
	  </table>
		<% end %>
	</div>

	<div id="right_login" class="right_column">
		<div class="request_invite">
			<p>Request an invitation for the ZED9 private beta to start shaping the site and your future fitness.</p>
			<% form_for Invitation.new do |f| %>
				<div id="join_list">
					<%= f.text_field :recipient_email, :value => "Email", :class => "email_address" %>
					<%= f.submit "Request an invite", :class => "request" %>
				</div>
			<% end %>
		</div>

	</div>
</div>