<div class="content_header">
		<h1>Log in</h1><br>
</div>

<div class="content">

	<div id="login_form">
		<% form_for @user_session, :url => user_session_path do |f| %>

	  <%= f.error_messages %>

	  <table id="login_box" class="form">
	    <tr>
	      <th><%= f.label :login, "User name" %></th>      
	      <td><%= f.text_field :login %></td>
	    </tr>
	    <tr>
	      <th><%= f.label :password %></th>
	      <td><%= f.password_field :password %></td>
	    </tr>
	    <tr>
	      <th>&nbsp;</th>
	      <td><%= f.check_box :remember_me %> <%= f.label :remember_me %></td>
	    </tr>
	    <tr>
	      <th>&nbsp;</th>
		    <td><%= f.submit "Log in", :class => "submit" %></td> 
	    </tr>
	  </table>
		<% end %>
	</div>

	<div id="right_login" class="right_column">
		<div class="request_invite">
			<p>Not a member of ZED9? We're currently in private beta and scaling as fast as we can. Put your name on the list for an invitation!</p>
			<% form_for Invitation.new do |f| %>
				<table id="join_list" class="form">
					<tr>
						<th><%= f.label :recipient_email, "Email" %></th>
						<td><%= f.text_field :recipient_email %></td>
					</tr>
					<tr>
						<th>&nbsp;</th>
						<td><%= f.submit "Reserve your spot", :class => "submit" %>
					</tr>
				</table>
			<% end %>
		</div>
	</div>
</div>