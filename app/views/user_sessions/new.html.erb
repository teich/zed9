<div id="content_header">
		<h1>Log in</h1><br>
</div>

<div id="content">

	<% form_for @user_session, :url => user_session_path do |f| %>

  <%= f.error_messages %>

  <table id="login_form" class="form">
    <tr>
      <th><%= f.label :login, "User name" %></th>      
      <td><%= f.text_field :login %></td>
    </tr>
    <tr>
      <th><%= f.label :Password %></th>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr>
      <th>&nbsp;</th>
      <td><%= f.check_box :remember_me %> <%= f.label :remember_me %></td>
    </tr>
    <tr>
      <th>&nbsp;</th>
	    <td><%= f.submit "Log in", :class => "submit" %></td> 
    </tr>
  </table>

	<% end %>

</div>