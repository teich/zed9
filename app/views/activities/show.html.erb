<h1>Activities#show</h1>

<p>
    NAME: <%=h @activity.name %>
    TYPE: <%=h @activity.type %><BR><BR> 
 <b>Start time:</b>
  <%=h @activity.start_time %>
</p>

<p>
  <b>Average heart rate:</b>
  <%=h @activity.average_hr %>
</p>

<p>
  <b>End time:</b>
  <%=h @activity.end_time %>
</p>

<%= image_tag scruffy_path(@activity) %>

<% if false then %>
<%= image_tag scruffy_image %>
<% end %>
  
<p>
<%= link_to 'Edit', edit_activity_path(@activity) %> |
<%= link_to 'Back', activities_path %>
</p>