<div class="content_header">
	<h1>Reset Password</h1><br>
</div>

<div class="content">

	<div id="change_password">
 
		<% form_for @user, :url => password_reset_path, :method => :put do |f| %>
		
  		<%= f.error_messages %>

		  <table id="new_password" class="form">
			  <tr>
			    <th class="annotated"><%= f.label :password, f.object.new_record? ? nil : "New password" %></th>
			    <td class="annotated"><%= f.password_field :password %></td>
			  </tr>
			  <tr>
					<th>&nbsp;</th>
					<td class="field_note">Passwords must be at least 4 characters</td>
			  </tr>
			  <tr>
			    <th><%= f.label :password_confirmation, "Confirm password" %></th>
			    <td><%= f.password_field :password_confirmation %></td>
			  </tr>
				<tr>
					<th>&nbsp;</th>
			    	<td><%= f.submit "Update password in log in", :class => "submit" %></td> 
				</tr>
			</table>

		<% end %>
	
	</div>

</div>